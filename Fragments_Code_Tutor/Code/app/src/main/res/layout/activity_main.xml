<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:background="@color/activity_color">
    <TextView
        android:id="@+id/mainActivity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_Activity"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="5dp">
    </TextView>
    <TextView
        android:id="@+id/backStactEntryCount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp">
    </TextView>
    <FrameLayout
        android:id="@+id/mainActivity_container"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/container_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/main_Activity_container"
            android:textSize="25dp"
            android:textColor="@color/color_dim"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            >
        </TextView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/mainActivtiy_AddButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/black"
            android:layout_margin="10dp"
            android:text="Add "
            android:layout_weight="0.33">
        </Button>
        <Button
            android:id="@+id/mainActivtiy_popBackStack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Pop Stak"
            android:layout_weight="0.33"
            android:backgroundTint="@color/black"
            >
        </Button>
        <Button
            android:id="@+id/mainActivtiy_replace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Replace"
            android:layout_weight="0.33"
            android:backgroundTint="@color/black">
        </Button>
    </LinearLayout>
</LinearLayout>